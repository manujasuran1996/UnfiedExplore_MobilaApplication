<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_5"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:id="@+id/register_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/trans_white_rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/register_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="Get Started"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/register_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:text="We need just a few details to get you started."
            android:textColor="@color/colorProfile"
            android:textSize="12sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="E-mail address"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColorHint="@color/colorProfile" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_email"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/password"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColorHint="@color/colorProfile" />

        <EditText
            android:id="@+id/register_confirm_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_password"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/password"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColorHint="@color/colorProfile" />
    </LinearLayout>


    <Button
        android:id="@+id/register_create_account"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details" />

    <Button
        android:id="@+id/register_backToLogin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_create_account"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:padding="15dp"
        android:text="Return to Login"
        android:textAllCaps="false"
        android:textColor="@color/login_form_details" />
</RelativeLayout>
